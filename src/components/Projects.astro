<style>
  .projects-container {
    padding: 2rem;
    background-color: #222; /* Fondo oscuro */
    color: #fff; /* Texto en blanco para contraste */
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .project-card {
    position: relative;
    background: #333; /* Fondo oscuro para las tarjetas */
    border-radius: 12px; /* Esquinas redondeadas */
    overflow: hidden;
    text-align: center;
    padding: 1rem;
    transition:
      transform 0.2s,
      box-shadow 0.2s;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4); /* Sombra */
  }

  .project-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 12px; /* Coincide con el border-radius de la tarjeta */
    padding: 2px; /* Ancho del borde */
    background: linear-gradient(135deg, #ff66b2, #9966ff, #ff99cc);
    background-size: 300% 300%; /* Para animar el movimiento del gradiente */
    z-index: -1;
    transition: background-position 0.5s ease; /* Movimiento suave del gradiente */
  }

  .project-card:hover::before {
    background-position: 100% 100%; /* Mueve el gradiente en hover */
  }

  .project-card img {
    width: 100%;
    height: 200px; /* Altura fija para todas las imágenes */
    object-fit: cover; /* Ajusta la imagen para que cubra el contenedor manteniendo el aspecto */
    border-bottom: 1px solid #444; /* Bordes más oscuros para coincidir con el fondo */
  }

  .project-card h3 {
    font-size: 1.5rem;
    margin: 1rem 0;
    color: #fff; /* Texto en blanco para las tarjetas */
  }

  .project-card p {
    font-size: 1rem;
    margin-bottom: 1rem;
    color: #ddd; /* Texto ligeramente gris para suavizar */
  }

  .project-links a {
    display: inline-block;
    margin: 0.5rem 1rem;
    padding: 0.5rem 1rem;
    background-color: #ff66b2; /* Color del botón que combina con el borde */
    color: white;
    text-decoration: none;
    border-radius: 4px;
    transition: background-color 0.2s;
  }

  .project-links a:hover {
    background-color: #9966ff; /* Cambia el color al pasar el mouse */
  }

  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.6); /* Sombra más pronunciada en hover */
  }
</style>
