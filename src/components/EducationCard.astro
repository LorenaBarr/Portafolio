---
export interface Props {
  title: string;
  duration: string;
  description: string;
}

const { title, duration, description } = Astro.props;
---

<div class="education-card">
  <h3>{title}</h3>
  <h4>{duration}</h4>
  <p>{description}</p>
</div>

<style>
  .education-card {
    background-color: #333;
    color: #fff;
    padding: 1rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .education-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  }

  .education-card h3 {
    margin-bottom: 0.5rem;
    font-size: 1.2rem;
  }

  .education-card h4 {
    margin-bottom: 0.5rem;
    font-size: 1rem;
    color: #ff66b2;
  }

  .education-card p {
    margin: 0;
    font-size: 0.9rem;
    line-height: 1.4;
  }
</style>
